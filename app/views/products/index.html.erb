<div class="modify-for-footer">
  <h1>Products</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% if policy(Product).new? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-success" %>
<% end %>
<br>
</div>
